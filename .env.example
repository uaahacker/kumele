# Application
APP_ENV=production
APP_DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# Database
DATABASE_URL=postgresql+asyncpg://kumele:kumele_pass@postgres:5432/kumele_db

# Redis
REDIS_URL=redis://redis:6379/0

# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=kumele_knowledge

# ============================================
# LLM Configuration (Mistral AI)
# ============================================
# Choose ONE mode: "internal", "external", or "openrouter"
LLM_MODE=internal

# Option 1: INTERNAL - TGI Server (same server/Docker network)
# Use this when running TGI alongside your app
LLM_API_URL=http://tgi:80
LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Option 2: EXTERNAL - Mistral API (different server/cloud)
# Use this when using Mistral's hosted API
# Set LLM_MODE=external to enable
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_API_URL=https://api.mistral.ai/v1
MISTRAL_MODEL=mistral-small-latest
# Available models: mistral-tiny, mistral-small-latest, mistral-medium-latest, mistral-large-latest

# Option 3: OPENROUTER - Free LLM Access (fallback/primary)
# Get free API key at https://openrouter.ai/
# Set LLM_MODE=openrouter to use as primary, or leave key set for automatic fallback
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_API_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free
# Free models: mistralai/mistral-7b-instruct:free, google/gemma-2-9b-it:free, meta-llama/llama-3.1-8b-instruct:free

# Translation
TRANSLATE_URL=http://libretranslate:5000
SUPPORTED_LANGUAGES=["en","fr","es","zh","ar","de"]

# HuggingFace Models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
MODERATION_MODEL=unitary/toxic-bert
IMAGE_MODERATION_MODEL=Falconsai/nsfw_image_detection

# Image Processing
IMAGE_ANALYSIS_ENABLED=true

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Ratings
RATING_ATTENDEE_WEIGHT=0.7
RATING_SYSTEM_WEIGHT=0.3

# Moderation Thresholds
TOXICITY_THRESHOLD=0.60
HATE_THRESHOLD=0.30
SPAM_THRESHOLD=0.70
NUDITY_THRESHOLD=0.60
VIOLENCE_THRESHOLD=0.50
HATE_SYMBOLS_THRESHOLD=0.40
